<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/navigation_header_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@drawable/gradient_background_header"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/nav_bar_instructions"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/article_search"
        android:text="@string/nav_bar_instructions"
        style="@style/NavBarHeaderStyle"/>

    <EditText
        android:id="@+id/article_search"
        android:hint="@string/search_here"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/submit_button"
        style="@style/NavBarHeaderEditTextStyle"/>

    <ImageView
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:paddingStart="@dimen/submit_button_padding_left"
        android:paddingEnd="@dimen/submit_button_padding_right"
        android:src="@drawable/submit"
        android:contentDescription="@string/submit_button"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_divider"
        android:background="@color/nav_text_color"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
