<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/navigation_header_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@drawable/gradient_background_header"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/nav_bar_instructions"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:text="@string/nav_bar_instructions"
        style="@style/NavBarHeaderStyle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_divider"
        android:background="@color/nav_text_color"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
